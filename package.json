{
  "name": "boilerplate",
  "dependencies": {
    "express": "latest",
    
    "stylus": "latest",
    "nib": "latest",
    "autoprefixer-stylus": "latest",
    
    "browserify": "latest",
    "bower": "latest",
    "debowerify": "latest",
    "jshint": "latest",
    
    "jade": "latest",
    
    "livereload": "latest",
    "watch": "latest",
    "parallelshell": "latest",
    "serve-favicon": "latest"
  },
  "scripts": {
    "jshint": "jshint assets/js",
    "styles": "stylus assets/styles/main.styl -r -m -u nib -u autoprefixer-stylus -o public",
    "js": "browserify -t debowerify assets/js/main.js > public/main.js",
    "styles:watch": "watch \"npm run styles\" assets/styles/ --wait=0.1",
    "js:watch": "watch \"npm run js\" assets/js/ --wait=0.1",
    "start": "parallelshell \"npm run styles:watch\" \"npm run js:watch\" \"node app.js\""
  }
}
